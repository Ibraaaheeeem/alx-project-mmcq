<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackground"
    android:orientation="horizontal"
    android:padding="16dp">

    <TextView
        android:id="@+id/levelsign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aclonica"
        android:text=">"
        android:textColor="#673AB7"
        android:textSize="60sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/levellogo"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:rotationY="0"
        android:scaleType="centerInside"
        android:visibility="gone"
        app:srcCompat="@drawable/level1bg" />

    <LinearLayout
        android:id="@+id/text_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/luckiest_guy"
            android:gravity="center_horizontal"
            android:letterSpacing="0.1"
            android:text="SUBJECT"
            android:textColor="#0000FF"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/walter_turncoat"
            android:gravity="center_horizontal"
            android:text="units"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/expand_field"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="0"
        android:gravity="center">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@null"
            android:src="@drawable/baseline_keyboard_double_arrow_down_24"
            app:tint="#4e4e4e" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16dp">

        <ImageView
            android:id="@+id/startFreeStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:visibility="gone"
            app:srcCompat="@drawable/baseline_play_circle_24" />

        <ImageView
            android:id="@+id/addToMock"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:visibility="gone"
            app:srcCompat="@drawable/baseline_library_add_24" />
    </FrameLayout>

</LinearLayout>
